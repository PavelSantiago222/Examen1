<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_principal">

    <Button
        android:id="@+id/btMenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Vista 1"
        app:layout_constraintTop_toBottomOf="@+id/tvMenu"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="12dp" />

    <Button
        android:id="@+id/btMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Vista 2"
        app:layout_constraintTop_toBottomOf="@+id/btMenu1"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="-21dp" />

    <Button
        android:id="@+id/btMenu3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Vista 3"
        app:layout_constraintTop_toBottomOf="@+id/btMenu2"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteX="12dp" />

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="Bienbenido Al Menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>